<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/habit_item"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C4C4C4"
            >

            <TextView
                android:id="@+id/done_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="0%"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/done5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/done_percent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/ic_baseline_undone_mark"
            />




            <ImageView
                android:id="@+id/done4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/done_percent"
                app:layout_constraintEnd_toStartOf="@+id/done5"
                android:background="@drawable/ic_baseline_undone_mark"
                />

            <ImageView
                android:id="@+id/done3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/done_percent"
                app:layout_constraintEnd_toStartOf="@+id/done4"
                android:background="@drawable/ic_baseline_undone_mark" />

            <ImageView
                android:id="@+id/done2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/done_percent"
                app:layout_constraintEnd_toStartOf="@+id/done3"
                android:background="@drawable/ic_baseline_undone_mark"/>

            <ImageView
                android:id="@+id/done1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/done_percent"
                app:layout_constraintEnd_toStartOf="@+id/done2"
                android:background="@drawable/ic_baseline_undone_mark"/>

            <TextView
                android:id="@+id/habit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="14dp"
                android:text="Habit"
                android:textColor="#000000"
                android:textSize="26sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/done_percent"
                app:layout_constraintTop_toBottomOf="@+id/done_percent" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="25dp"
                android:layout_height="28dp"
                app:layout_constraintBottom_toBottomOf="@+id/habit_title"
                app:layout_constraintEnd_toEndOf="@+id/done5"
                app:srcCompat="@drawable/ic_baseline_share" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>